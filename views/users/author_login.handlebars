
<div class="loginContainer">
      <div class="columnAuthorLogin">

         <h1>Author Login</h1>
         <form action="/author_login" method="POST" class="loginForm">

         <div class="authorLoginLabels">
         <label for="username">Username</label>
         <input type="text" name="username" placeholder="Enter a User Name" id="author_username" required>
      
            <label for="password">Password</label> 
            <input type="password" name="password" placeholder="Should be grater than 4 characters" id="author_password" required>
         </div>

         <button type="submit">LOGIN</button>

         {{#if hasErrors}}
               <p class="errors"> {{errors}}.</p>
         {{/if}}
         <footer>
            <a href="/author_signup">Need to register as an Author? Click here to sign-up</a>
         </footer>
         </form>


      </div>
         
</div>
