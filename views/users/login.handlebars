<main>

  <h1>Login Here</h1>
  <form action="/login" method="POST" class="login-form" id="login-form">
    <label for="username">
      Username
      <input type="text" name="username" id="username" placeholder="Enter The Username" class="full-width-input" />
    </label>
    <label for="password">
      Password
      <input type="password" name="password" id="password" placeholder="Enter The Passsword" class="full-width-input" />
    </label>
    <br><br><br><button type="submit">Submit</button>
    <br><br><br><button type="reset">Clear</button>
  </form>
<footer>
  <nav>
        <ul>
            <li><a href="/signup">Need to register? Click here to sign-up</a></li>
        </ul>
</nav>
</footer>
{{#if notString}}
<p class="error">Either ussername/password not in correct format. Username should be atleast 4 characters and password should be atleast 6 characters both without any spaces.</p>
{{#if isEmptyUn}}
<p class="error">Enter username.</p>
{{/if}}
{{#if isEmptyPw}}
<p class="error">Enter password.</p>
{{/if}}
{{#if hasErrors}}
<p class="error">Either the username or password is invalid.</p>
{{/if}}
</main>